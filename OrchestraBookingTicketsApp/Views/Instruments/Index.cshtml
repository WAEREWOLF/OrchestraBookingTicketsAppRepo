@model IEnumerable<OrchestraBookingTicketsApp.Models.Instrument>

@{
    ViewData["Title"] = "Index";
}

<h2>Instruments in the orchestra</h2>
<link rel="stylesheet" href="~/css/Button.css">
<style>
    tr:nth-child(even) {
        background-color: #c89797;
    }
</style>
@if (User.IsInRole("Administrator"))
{
   <p>
      <a asp-action="AddInstrument" >Create New</a>
   </p>
}
<table class="table" BORDERCOLOR=#c89797>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>               
            </td>            
        </tr>
}
    </tbody>
</table>
<div>
    <input type="button" value="Back" class="btn success" onclick="location.href='@Url.Action("Index", "Orchestras")'" />
</div>