@model IEnumerable<OrchestraBookingTicketsApp.Models.BuildingFacilities>

@{
    ViewData["Title"] = "Index";
}

<h2>Building Facilities</h2>
<link rel="stylesheet" href="~/css/Button.css">
<style>
    tr:nth-child(even) {
        background-color: #c89797;
    }
</style>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" BORDERCOLOR=#c89797>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaxSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasAirConditioning)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasSmokingArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasAirConditioning)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasSmokingArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.LocationId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BuildingFacilitiesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BuildingFacilitiesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BuildingFacilitiesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <input type="button" value="Back" class="btn success" onclick="location.href='@Url.Action("Index", "Locations")'" />
</div>