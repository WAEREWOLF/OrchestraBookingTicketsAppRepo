@model OrchestraBookingTicketsApp.Models.BuildingFacilities

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>BuildingFacilities</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BuildingFacilitiesId" />
            <div class="form-group">
                <label asp-for="MaxSeats" class="control-label"></label>
                <input asp-for="MaxSeats" class="form-control" />
                <span asp-validation-for="MaxSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasAirConditioning" /> @Html.DisplayNameFor(model => model.HasAirConditioning)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasSmokingArea" /> @Html.DisplayNameFor(model => model.HasSmokingArea)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

